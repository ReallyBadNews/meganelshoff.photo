{
  "name": "next-typescript-tailwind-mdx-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_ENV=production next build",
    "postbuild": "NODE_ENV=production next-sitemap",
    "start": "next start",
    "test": "jest --watch",
    "export": "next export",
    "format": "prettier --write \"{,!(node_modules)/**/}*.{js,jsx,ts,tsx,mdx}\"",
    "lint": "yarn lint:ts && yarn lint:es",
    "lint:ts": "npx tsc --noEmit",
    "lint:es": "eslint '*.{js,jsx,ts,tsx}' --ignore-pattern 'node_modules/' --ignore-pattern '.next/' --ignore-pattern 'out/'",
    "lint:es:fix": "eslint '*.{js,jsx,ts,tsx}' --ignore-pattern 'node_modules/' --ignore-pattern '.next/' --ignore-pattern 'out/' --fix"
  },
  "dependencies": {
    "@emotion/core": "^10.1.1",
    "@emotion/styled": "^10.0.27",
    "@joebell/cx": "joe-bell/cx",
    "@next/mdx": "^10.0.3",
    "@plaiceholder/base64": "^1.0.0",
    "@plaiceholder/next": "^1.0.0",
    "dotenv-flow": "^3.2.0",
    "emotion": "^10.0.27",
    "emotion-server": "^10.0.27",
    "mdx-prism": "^0.3.1",
    "next": "11.1.3",
    "next-seo": "^4.17.0",
    "next-sitemap": "^1.3.14",
    "next-themes": "^0.0.10",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rehype": "^11.0.0",
    "remark-code-titles": "^0.1.1",
    "remark-footnotes": "^3.0.0",
    "remark-slug": "^6.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.10",
    "@emotion/babel-preset-css-prop": "^10.2.1",
    "@mdx-js/loader": "^1.6.22",
    "@tailwindcss/typography": "^0.3.1",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/node": "^14.14.12",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "next-compose-plugins": "^2.2.1",
    "np": "^7.0.0",
    "postcss": "^8.2.1",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,mdx,graphql}": [
      "prettier --write \"{,!(node_modules)/**/}*.{js,jsx,ts,tsx,mdx}\""
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "proseWrap": "always"
  }
}
